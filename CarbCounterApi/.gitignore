# See https://help.github.com/articles/ignoring-files/ for more about ignoring files.

# Ignore bundler config.
/.bundle

# Ignore the default SQLite database.
db/*.sqlite3
db/*.sqlite3-journal

# Ignore all logfiles and tempfiles.
log/*
tmp/*
!log/.keep
!tmp/.keep

# Ignore pidfiles, but keep the directory.
tmp/pids/*
!tmp/pids/
tmp/pids/*.pid

# Ignore uploaded files in development.
storage/*
!storage/.keep

# Ignore the master key which is used to decrypt credentials and more.
config/master.key
config/credentials.yml.enc

# Ignore node_modules
node_modules/

# Ignore yarn error log
yarn-error.log

# Ignore Byebug command history file.
.byebug_history

# Ignore dotenv environment variables file.
.env
.env.*

# Ignore coverage reports generated by simplecov.
coverage/

# Ignore system test files
spec/examples.txt

# Ignore spring files
spring/*.pid
spring/commands

# Ignore Capybara files
capybara-*.html

# Ignore the result of running `rails notes`
rails_notes.txt

# Ignore the result of running `rails stats`
stats.txt

# Ignore the result of running `rails secret`
secret.txt

# Ignore the result of running `rails credentials:edit`
config/credentials.yml.enc

# Ignore the result of running `rails db:environment:set RAILS_ENV=test`
config/database.yml

# Ignore the result of running `rails db:environment:set RAILS_ENV=development`
config/database.yml

# Ignore the result of running `rails db:environment:set RAILS_ENV=production`
config/database.yml

# Ignore PostgreSQL database files
*.pg
*.pg-journal